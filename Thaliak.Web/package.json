  "dependencies": {
    "@apollo/client": "^3.7.4",
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-brands-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@graphiql/react": "^0.13.4",
    "@graphiql/toolkit": "^0.8.0",
    "@remix-run/node": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "@remix-run/serve": "^1.11.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "classnames": "^2.3.2",
    "graphiql": "^2.2.0",
    "graphql": "^16.6.0",
    "react": "^18.2.0",
    "react-audio-player": "^0.17.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.7.0",
    "react-scripts": "^5.0.1",
    "timeago-react": "^3.0.4",
    "timeago.js": "^4.0.2",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "dev": "concurrently \"yarn dev:css\" \"REACT_APP_GIT_SHA=$(git rev-parse --short HEAD) remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "build": "yarn build:css && REACT_APP_GIT_SHA=$(git rev-parse --short HEAD) remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "start": "remix-serve build"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@3.3.1",
  "devDependencies": {
    "@remix-run/dev": "^1.11.1",
    "@types/graphql": "^14.5.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "eslint-config-react-app": "^7.0.1",
    "postcss": "^8.4.20",
    "tailwindcss": "^3.2.4"
  }
}
